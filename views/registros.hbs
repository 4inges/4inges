{{>navbar}}
<center>
<h1>.:: AGENDAR CITAS ::.</h1>
</center>
<form action="/agregar" method="post">
  <fieldset>
    <div class="form_Ag">
      <div class="form-group">
        <label for="exampleSelect1" class="form-label mt-4">Tipo de coche</label>
        <select class="form-select" name="tipoCoche" required>
          <option selected disabled value="">.:: Seleccione un tipo de coche ::.</option>
          <option value="Compacto">Compacto ($80)</option>
          <option value="Taxi/Uber">Taxi/Uber ($60)</option>
          <option value="Camioneta">Camioneta ($100)</option>
          <option value="Sedan">Sedán ($80)</option>
        </select>
      </div>

      <fieldset class="form-group">
        <legend class="mt-4">Tipo de Servicio</legend>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="lavExt" name="lavExt">
          <label class="form-check-label" for="flexCheckDefault">
            Lavado Exterior ($80)
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="aspInt" name="aspInt">
          <label class="form-check-label" for="flexCheckDefault">
            Aspirado de Interiores ($50)
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="limpFaros" name="limpFaros">
          <label class="form-check-label" for="flexCheckDefault">
            Limpieza de Faros ($70)
          </label>
        </div>
      </fieldset>

      <div class="form-group">
        <label for="exampleSelect1" class="form-label mt-4">Sucursal</label>
        <select class="form-select" name="sucursal" required>
          <option disabled selected value="">.:: Seleccione una Sucursal ::.</option>
          <option>Río Verde (Torreón)</option>
          <option>Diagonal Reforma (Torreón)</option>
          <option>Enrique Anzuela(Gómez Palacio)</option>
          <option>Av. Coahuila (Lerdo)</option>
        </select>
      </div>

      <div class="form-group">
        <label for="exampleSelect1" class="form-label mt-4">Fecha de Cita</label>
        <br>
        <input type="date" class="form-control" id="fechaAg" name="fechaAg" aria-describedby="emailHelp" required>
      </div>
        
      <div class="form-group">
        <label for="horario" class="form-label mt-4">Horario</label>
        <select class="form-select" name="horario" required>
          <option selected disabled value="">.:: Seleccione un horario::.</option>
          <option>10:00 - 11:00 a.m</option>
          <option>11:00 - 12:00 a.m</option>
          <option>12:00 - 1:00 p.m</option>
          <option>1:00 - 2:00 p.m</option>
          <option>2:00 - 3:00 p.m</option>
          <option>3:00 - 4:00 p.m</option>
          <option>5:00 - 6:00 p.m</option>
        </select>
      </div>

      <div class="form-group">
        <label for="nomCli" class="form-label mt-4">Nombre completo del cliente</label>
        <input type="text" class="form-control" name="nomCli" aria-describedby="emailHelp" placeholder="Nombre" required>
      </div>

      <div class="form-group">
        <label for="telCli" class="form-label mt-4">Télefono de contacto</label>
        <input type="text" class="form-control" name="telCli" aria-describedby="emailHelp" placeholder="Teléfono" required>
      </div>

      <br>
      <center>
        <button class="btn btn-primary" type="submit" id="btnAgendar">AGENDAR</button>
      </center>
    </div>
  </fieldset>
</form>

<script type="module" src="./javascripts/reg.js"></script>

<br>

{{>footer}}